{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "bl4",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#lexicon"
    }
  ],
  "repository": {
    "strings": {
      "name": "string.quoted.double.l4",
      "begin": "(:\\w{2}:)?\"",
      "end": "\"",
      "beginCaptures": {
        "1": { "name": "storage.type.rule.l4" }
      },
      "patterns": [
        {
          "name": "constant.character.escape.l4",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "name": "comment.line.hash",
      "match": "(#.*$)"
    },
    "variable": {
      "name": "variable.name",
      "match": "(\\p{Alpha}(?:\\w|\\')*)"
    },
    "arrow": {
      "name": "keyword.control.arrow.bl4",
      "match": "->"
    },
    "lexicon": {
      "name": "meta.entity.party.l4",
      "begin": "(lexicon)",
      "end": "\\s*(?=decl)",
      "beginCaptures": {
        "1": {
          "name": "storage.type.lexicon.l4"
        }
      },
      "patterns": [
        {
          "include": "#variable"
        },
        {
          "include": "#arrow"
        }
      ]
    }
  },
  "scopeName": "source.bl4"
}
