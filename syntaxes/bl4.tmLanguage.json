{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "bl4",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#rule"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#lexicon"
    },
    {
      "include": "#assertions"
    },
    {
      "include": "#and"
    },
    {
      "include": "#class-dec"
    },
    {
      "include": "#global-dec"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bl4",
          "match": "\\b(not)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.bl4",
      "begin": "(:\\w{2}:)?\"",
      "end": "\"",
      "beginCaptures": {
        "1": { "name": "storage.type.rule.bl4" }
      },
      "patterns": [
        {
          "name": "constant.character.escape.bl4",
          "match": "\\\\."
        }
      ]
    },
    "type": {
      "name": "entity.name.type",
      "_comment": "lookbehind for colon or -> ; then match type | (type, type)",
      "match": "(?<=\\:|->)\\s+?\\w+|\\((\\w+\\,\\s*\\w+)\\)"
    },
    "comments": {
      "name": "comment.line.hash",
      "match": "(#\\s+.*$)"
    },
    "variable": {
      "name": "variable.name",
      "match": "(\\p{Alpha}(?:\\w|\\')*)"
    },
    "arrow": {
      "name": "keyword.control.arrow.bl4",
      "match": "->"
    },
    "and": {
      "name": "keyword.operator.and.bl4",
      "match": "&&"
    },
    "class-dec": {
      "name": "meta.entity.class.bl4",
      "begin": "(class)\\s+(\\w+)",
      "end": "\\s*(?=decl|class)",
      "captures": {
        "1": {
          "name": "storage.type.class.bl4"
        },
        "2": {
          "name": "entity.name.type.bl4"
        }
      },
      "patterns": [
        {
          "name": "meta.extends.bl4",
          "match": "(extends)\\s+(\\w+)",
          "captures": {
            "1": { "name": "keyword.other" },
            "2": { "name": "entity.name.type.bl4" }
          }
        },
        {
          "include": "#field-dec"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "lexicon": {
      "name": "meta.entity.lexicon.bl4",
      "begin": "(lexicon)",
      "end": "\\s*(?=decl|class)",
      "beginCaptures": {
        "1": {
          "name": "storage.type.lexicon.bl4"
        }
      },
      "patterns": [
        {
          "include": "#variable"
        },
        {
          "include": "#arrow"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "rule": {
      "name": "meta.entity.rule.bl4",
      "begin": "(rule)\\s+(\\<\\w+\\>)",
      "end": "\\s*(?=rule|assert)",
      "captures": {
        "1": {
          "name": "storage.type.rule.bl4"
        },
        "2": {
          "name": "support.type"
        }
      },
      "patterns": [
        {
          "include": "#comments"
        },
        {
          "name": "meta.for.bl4",
          "match": "(for)\\s+(\\w+\\:)\\s+(\\w+)\\,\\s+(\\w+\\:)\\s+(\\w+)",
          "captures": {
            "1": {
              "name": "keyword.control.bl4"
            },
            "2": {
              "name": "variable.name"
            },
            "3": {
              "name": "entity.name.type"
            },
            "4": {
              "name": "variable.name"
            },
            "5": {
              "name": "entity.name.type"
            }
          }
        },
        {
          "name": "meta.rule.precond.bl4",
          "begin": "(if)",
          "end": "(?=then)",
          "captures": {
            "1": {
              "name": "keyword.control.bl4"
            }
          },
          "patterns": [
            {
              "include": "#and"
            },
            {
              "include": "#keywords"
            },
            {
              "include": "#type"
            }
          ]
        },
        {
          "name": "meta.rule.concl.bl4",
          "begin": "(then)",
          "end": "\\n",
          "captures": {
            "1": {
              "name": "keyword.control.bl4"
            }
          }
        }
      ]
    },
    "assertions": {
      "name": "meta.entity.assert.bl4",
      "begin": "(assert)",
      "end": "$\\n?",
      "beginCaptures": {
        "0": {
          "name": "keyword.other.assert.bl4"
        }
      },
      "patterns": [
        {
          "name": "support.function",
          "match": "\\s+(\\w+)(.\\w+)?(\\s+[+-]\\s+)?(\\d+)?"
        }
      ]
    },
    "global-dec": {
      "name": "meta.entity.global.bl4",
      "begin": "(decl)\\s+(\\w+)\\s*(:)",
      "end": "$\\n?",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.global.bl4"
        },
        "2": {
          "name": "variable.name.global.bl4"
        },
        "3": {
          "name": "keyword.other.colon.bl4"
        }
      },
      "patterns": [
            {
              "include": "#type"
            }
      ]
    },
    "field-dec": {
      "name": "meta.entity.field.bl4",
      "begin": "(\\w+)\\s*(:)",
      "end": "$\\n?",
      "beginCaptures": {
        "1": {
          "name": "variable.name.global.bl4"
        },
        "2": {
          "name": "keyword.other.colon.bl4"
        }
      },
      "patterns": [
            {
              "include": "#type"
            }
      ]
    }
  },
  "scopeName": "source.bl4"
}
